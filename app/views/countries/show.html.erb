<p class='pays'><%= @country.name %></p>
<p><%= @country.touristsCount %> touristes</p>
<p><%= @country.description %></p>

<% @cities.each do |city| %>
	<% if @country.id == city.country %>
		<label class='ville'><%= city.name %></label>
		<%= link_to image_tag(city.name + ".jpg", width: '20%'), city %>
	<% end %>
<% end %>
